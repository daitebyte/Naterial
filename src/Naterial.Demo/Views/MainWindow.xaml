<Window x:Class="Naterial.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nd="http://schemas.daitebyte.com/naterial"
        Title="Naterial.Demo"
        FontFamily="{StaticResource FontFamily.Default}"
        Background="{DynamicResource Brush.BackgroundFill}"
        Foreground="{DynamicResource Brush.OnSurface.High}"
        Width="1280"
        Height="720"
        MinWidth="320"
        MinHeight="320">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="nd:ElevationAssist.Level"
                    Value="2" />
            <Setter Property="Background"
                    Value="{DynamicResource Brush.SurfaceFill }" />
            <Setter Property="Foreground"
                    Value="{DynamicResource Brush.OnSurface.High}" />
            <Setter Property="Width"
                    Value="120" />
            <Setter Property="Height"
                    Value="120" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Grid>
                            <AdornerDecorator Effect="{TemplateBinding nd:ElevationAssist.Level, Converter={x:Static nd:ShadowConverter.Instance}}">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4"
                                        SnapsToDevicePixels="True" />
                            </AdornerDecorator>
                            <Border Background="#FFF"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Opacity="{TemplateBinding nd:ElevationAssist.Level, Converter={x:Static nd:OverlayConverter.Instance}}" />
                            <ContentPresenter RecognizesAccessKey="True"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel Margin="16">
        <CheckBox Content="_Enable Dark mode"
                  Click="ThemeToggle_OnClick"
                  FocusVisualStyle="{x:Null}"
                  IsTabStop="False"
                  Background="#FFF"
                  Foreground="{DynamicResource Brush.OnSurface.High}"
                  BorderBrush="{DynamicResource Brush.OnSurface.Medium}"
                  HorizontalAlignment="Left" />
        <Separator Background="{DynamicResource Brush.DividerStroke}"
                   Margin="0 16" />
        <WrapPanel Margin="-8 -8 0 0">
            <Label Content="0 dp"
                   BorderBrush="{DynamicResource Brush.OutlineStroke}"
                   BorderThickness="1"
                   nd:ElevationAssist.Level="0"
                   Margin="8" />
            <Label Content="1 dp"
                   nd:ElevationAssist.Level="1"
                   Margin="8" />
            <Label Content="2 dp"
                   nd:ElevationAssist.Level="2"
                   Margin="8" />
            <Label Content="3 dp"
                   nd:ElevationAssist.Level="3"
                   Margin="8" />
            <Label Content="4 dp"
                   nd:ElevationAssist.Level="4"
                   Margin="8" />
            <Label Content="6 dp"
                   nd:ElevationAssist.Level="6"
                   Margin="8" />
            <Label Content="8 dp"
                   nd:ElevationAssist.Level="8"
                   Margin="8" />
            <Label Content="12 dp"
                   nd:ElevationAssist.Level="12"
                   Margin="8" />
            <Label Content="16 dp"
                   nd:ElevationAssist.Level="16"
                   Margin="8" />
            <Label Content="18 dp"
                   nd:ElevationAssist.Level="18"
                   Margin="8" />
            <Label Content="24 dp"
                   nd:ElevationAssist.Level="24"
                   Margin="8" />
        </WrapPanel>
    </StackPanel>
</Window>
