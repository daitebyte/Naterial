<Window x:Class="Naterial.Demo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nd="http://schemas.daitebyte.com/naterial"
        Title="Naterial.Demo"
        FontFamily="{StaticResource FontFamily.Default}"
        Background="{DynamicResource Brush.BackgroundFill}"
        Foreground="{DynamicResource Brush.OnSurface.High}"
        Width="1280"
        Height="720"
        MinWidth="320"
        MinHeight="320">
    <StackPanel Margin="16">
        <CheckBox Content="_Enable Dark mode"
                  Click="ThemeToggle_OnClick"
                  FocusVisualStyle="{x:Null}"
                  IsTabStop="False"
                  Background="#FFF"
                  Foreground="{DynamicResource Brush.OnSurface.High}"
                  BorderBrush="{DynamicResource Brush.OnSurface.Medium}"
                  HorizontalAlignment="Left" />
        <Separator Background="{DynamicResource Brush.DividerStroke}"
                   Margin="0 16" />
        <Label Content="Focus Visual Stroke"
               Foreground="{DynamicResource Brush.OnSurface.High}"
               BorderBrush="{DynamicResource Brush.FocusVisualStroke}"
               BorderThickness="0 0 0 1"
               Width="270"
               Height="32"
               Padding="8 0 0 0"
               HorizontalAlignment="Left"
               VerticalContentAlignment="Center" />
        <StackPanel Orientation="Horizontal"
                    Margin="0 16 0 0">
            <Border FocusVisualStyle="{StaticResource Style.FocusVisualDefault}"
                    Focusable="True"
                    Background="{DynamicResource Brush.PrimaryFill}"
                    Width="120"
                    Height="120" />
            <Border Focusable="True"
                    Background="{DynamicResource Brush.SecondaryFill}"
                    CornerRadius="16"
                    Width="120"
                    Height="120"
                    Margin="16 0 0 0">
                <Border.FocusVisualStyle>
                    <Style BasedOn="{StaticResource {x:Static SystemParameters.FocusVisualStyleKey}}">
                        <Setter Property="nd:FocusVisualAssist.CornerRadius"
                                Value="18" />
                    </Style>
                </Border.FocusVisualStyle>
            </Border>
            <Border Focusable="True"
                    Background="{DynamicResource Brush.ErrorFill}"
                    CornerRadius="180"
                    Width="120"
                    Height="120"
                    Margin="16 0 0 0">
                <Border.FocusVisualStyle>
                    <Style BasedOn="{StaticResource Style.FocusVisualDefault}">
                        <Setter Property="nd:FocusVisualAssist.BorderBrush"
                                Value="{DynamicResource Brush.ErrorFill}" />
                        <Setter Property="nd:FocusVisualAssist.BorderThickness"
                                Value="2" />
                        <Setter Property="nd:FocusVisualAssist.CornerRadius"
                                Value="180" />
                        <Setter Property="nd:FocusVisualAssist.Margin"
                                Value="-4" />
                    </Style>
                </Border.FocusVisualStyle>
            </Border>
        </StackPanel>
    </StackPanel>
</Window>
